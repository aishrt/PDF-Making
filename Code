FE




import { useQuery } from 'react-query';

import { axios } from '@/lib/axios';
import { ExtractFnReturnType, QueryConfig } from '@/lib/react-query';

export type PdfResponse = {
  pdf: string;
};

export const getPdf = async (id: string): Promise<PdfResponse> => {
  console.log(id, '_______________________idddd');

  return axios.get(`/pdf/pdfurl/${id}`);
};

type QueryFnType = typeof getPdf;

type UseInvoiceOptions = {
  config?: QueryConfig<QueryFnType>;
  id: string;
};

export const useInvoicePdf = ({ config, id }: UseInvoiceOptions = { id: '1' }) => {
  return useQuery<ExtractFnReturnType<QueryFnType>>({
    ...config,
    queryKey: ['invoicePdf'],
    queryFn: () => getPdf(id),
  });
};


