import { getPdf } from "@/api/getPdf";



  const handlePrint = async (id: string) => {
    setLoader(true);
    const { pdf } = await getPdf(id);
    setLoader(false);

    // window.open(pdf, '_blank');
  };





 <Button
          tabIndex={-1}
          onClick={() => handlePrint()}
          className="icon icon-btn  me-2"
          variant="outline"
          title="Print"
        >
          <i className="fa-solid fa-print"></i>
        </Button>
