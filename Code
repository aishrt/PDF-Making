const express = require('express');
const { pdfController } = require('../../controllers');
const { User } = require('../../models');

const router = express.Router();

router.get('/:id', async (req, res) => {
  const UserId = req.params.id;
  const userInfo = await User.findById(UserId);
  res.render('home', {
    name: `${userInfo?.first_name}`,
    phone: `${userInfo?.phone_number}`,
    email: `${userInfo?.email}`,
    company: `${userInfo?.company?.industry}`,
    address: `${userInfo?.company?.address}`,
    ein: `${userInfo?.company?.ein}`,
    loca: `${userInfo?.company?.city}  , ${userInfo?.company?.state}, ${userInfo?.company?.zip}`,
  });
});

router.get('/pdfurl/:id', pdfController.getPdf);

module.exports = router;




