pdf contotller 





const puppeteer = require('puppeteer');
const path = require('path');
const catchAsync = require('../utils/catchAsync');

const getPdf = catchAsync(async (req, res) => {
  const UserId = req.params.id;
  console.log(UserId, 'UserId');
  try {
    // We start a new browser, without showing UI
    const browser = await puppeteer.launch({
      headless: true,
      args: ['--no-sandbox'],
    });
    const page = await browser.newPage();
    const url = `${process.env.BACKEND_URL}/v1/pdf/${UserId}`;

    // We load the page, one of my blog post (networkidle0 means we're waiting for the network to stop making new calls for 500ms
    await page.goto(url, { waitUntil: 'networkidle0' });
    // We add style to hide some UI elements we don't want to see on our pdf
    await page.addStyleTag({
      content: `header.site-header,
  #cookie-band,
  .post-full-image,
  .post-full-comments,
  .read-next,
  .site-footer {
    display: none !important;
  }`,
    });
    const name = `pdf.pdf`;
    // Let's generate the pdf and close the browser
    await page.pdf({ path: `src/uploads/${name}`, format: 'A4' });
    const distFolder = path.join(__dirname, `../uploads/${name}`);
    await page.pdf({ path: distFolder, format: 'A4' });

    await browser.close();
    const url1 = `${process.env.BACKEND_URL}/uploads/${name}`;

    return res.json({ pdf: url1 });
  } catch (error) {
    return res.status(500).json({ error: error.message });
  }
});

module.exports = {
  getPdf,
};


